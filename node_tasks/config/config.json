{
    "moduleName": "framework",
    "rdb": true,
    "copyPatterns": [
        "config",
        "config/default/**",
        "composer.default.json",
        "LICENSE",
        "Modules/*.*",
        "phinx.php",
        "phpunit.xml",
        "public/.htaccess",
        "public/index.php",
        "public/readme.txt",
        "rdb.default",
        "readme.md",
        "storage/.*",
        "System/**",
        "!System/vendor",
        "!System/vendor/**",
        "Tests/**"
    ],
    "ignorePatterns": "$default",
    "pack": {
        "developmentPatterns": [
            "**",
            "!.backup/**",
            "!.dist/**",
            "!.git/**",
            "!.phpdoc/**",
            "!.phpunit*",
            "!config/development/**",
            "config/development/*.*",
            "!config/production/**",
            "config/production/*.*",
            "!composer.json",
            "!composer.lock",
            "!Modules/**",
            "Modules/*.*",
            "!node_modules/**",
            "!public/**",
            "public/*.*",
            "!storage/**",
            "storage/*.*",
            "!System/vendor/**"
        ],
        "productionPatterns": [
            "**",
            "!.*",
            "!.*/**",
            "!config/development/*",
            "!config/production/*",
            "!composer.json",
            "!composer.lock",
            "!mkdocs.yml",
            "!Modules/**",
            "Modules/*.*",
            "!Modules/.*",
            "!node_modules/**",
            "!phpdoc.*",
            "!phpunit.*",
            "!public/**",
            "public/*.*",
            "!public/.gitignore",
            "!storage/.gitignore",
            "!System/vendor/**",
            "!Tests/**"
        ],
        "versionHeaderFile": "./System/App.php",
        "zipFilePrefix": "rundizbones"
    }
}